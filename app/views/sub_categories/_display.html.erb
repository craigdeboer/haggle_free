<% categories.each do |category| %>	
	<div class="category-heading">
		<span><%= link_to category.name, category_listings_path(category) %></span>
		<%= button_to "Add Sub-Category For #{category.name}", new_category_sub_category_path(category), method: :get, remote: true, class: "button-normal" if admin? %>
	</div>
	<div class="all-subcategory-display">
		<% category.sub_categories.each do |subcategory| %>
			<div class="each-subcategory-display">
			<%= link_to subcategory.name, sub_category_listings_path(subcategory.id) %>
			<%= content_tag :span, "(#{subcategory.listings.size})" %>
			<%= button_to("Delete #{subcategory.name}", sub_category_path(id: subcategory.id), method: :delete, remote: true, data: {confirm: "Are you sure you want to delete this sub-category?" }, class: "delete-button") if admin? %>
			</div>
		<% end %>
	</div>
<% end %>