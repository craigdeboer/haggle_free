<!DOCTYPE html>
<html>
<head>
  <title>HaggleFree</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<%= render 'layouts/flash' %>
	<% if logged_in? %>
		<div id="new-listing-button">
			<ul>
				<li><%= link_to "Create New Listing", new_listing_path, class: "button-large" %></li>
			<li><%= link_to "My Listings", user_listings_path, class: "button-large" %></li>
		</ul>
		</div>
	<% end %>
	<%= yield %>
	<%= debug(params) if Rails.env.development? %>
</body>
</html>
