<% if logged_in? %>
	<h1>Hello <%= current_user.first_name %></h1>
<% end %>


<div id="add-user-button">
	<%= link_to new_user_path do %>
		<button>Sign Up</button>
	<% end %>
</div>
<div id="category-form-container">
	<div id="new-category-form"></div>
</div>

<div id="login-user-button">
	<%= link_to login_path do %>
		<button>Log In</button>
	<% end %>
</div>

<div id="logout-user-button">
	<%= link_to logout_path, method: :delete do %>
		<button>Log Out</button>
	<% end %>
</div>

<div id="all-categories-list">
	<%= render 'display', categories: @categories, subcategories: @subcategories %>
</div>
<div id="new-subcategory-form"></div>